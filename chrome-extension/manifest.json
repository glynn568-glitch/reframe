{
  "manifest_version": 3,
  "name": "Reframe — Social Image Resizer",
  "version": "1.1.0",
  "description": "Right-click any image to resize it for popular social media platforms. Crop and export in one click, processed locally.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Reframe — Resize for Social"
  }
}
