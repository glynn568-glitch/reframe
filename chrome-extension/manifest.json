{
  "manifest_version": 3,
  "name": "Reframe — Social Image Resizer",
  "version": "1.0.0",
  "description": "Right-click any image to instantly resize it for Instagram, Facebook, X/Twitter, LinkedIn, TikTok, YouTube, Pinterest.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Reframe — Resize for Social"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
